@model App.Models.BenhNhan

@{
    ViewData["Title"] = "Chi tiết Bệnh nhân";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Họ tên</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.HoTenBenhNhan)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-controller="HoSoBenhAn" asp-action="Index" asp-route-id="@Model.MaBenhNhan" class="btn btn-primary">
            <i class="fas fa-file-medical"></i> Xem Bệnh án
        </a>

        <a asp-action="Edit" asp-route-id="@Model.MaBenhNhan" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>