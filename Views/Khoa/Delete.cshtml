@model App.Models.Khoa

@{
    ViewData["Title"] = "Xác nhận Xóa Khoa";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <h3>Bạn có chắc muốn XÓA khoa này?</h3>
        <p class="text-danger">Cảnh báo: Không thể xóa nếu Khoa đang có Phòng Bệnh.</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Mã Khoa</dt>
            <dd class="col-sm-9">@Model.MaKhoa</dd>
            <dt class="col-sm-3">Tên Khoa</dt>
            <dd class="col-sm-9">@Model.TenKhoa</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaKhoa" />
            <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>