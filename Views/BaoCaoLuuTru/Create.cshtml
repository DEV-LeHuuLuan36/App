@model App.Models.BaoCao

@{
    ViewData["Title"] = "Tạo Báo cáo mới";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="MaBaoCao" class="form-label"></label>
                    <input asp-for="MaBaoCao" class="form-control" />
                    <span asp-validation-for="MaBaoCao" class="text-danger"></span>
                </div>
                <div class_md-8 mb-3">
                    <label asp-for="LoaiBaoCao" class="form-label"></label>
                    <input asp-for="LoaiBaoCao" class="form-control" />
                    <span asp-validation-for="LoaiBaoCao" class_danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TuNgay" class="form-label"></label>
                    <input asp-for="TuNgay" class="form-control" type="date" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DenNgay" class="form-label"></label>
                    <input asp-for="DenNgay" class="form-control" type="date" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="NguoiTao" class="form-label">Người tạo</label>
                <select asp-for="NguoiTao" class="form-control" asp-items="ViewBag.NguoiTao">
                    <option value="">-- Chọn nhân viên --</option>
                </select>
                <span asp-validation-for="NguoiTao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NoiDung" class="form-label">Nội dung (JSON/HTML)</label>
                <textarea asp-for="NoiDung" class="form-control" rows="10"></textarea>
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>