@model IEnumerable<App.Models.BaoCao>

@{
    ViewData["Title"] = "Quản lý Báo cáo Lưu trữ";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Tạo Báo cáo mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Loại Báo cáo</th>
                        <th>Ngày tạo</th>
                        <th>Người tạo</th>
                        <th>Trạng thái</th>
                        <th>Người duyệt</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LoaiBaoCao</td>
                            <td>@item.NgayTao?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.NguoiTaoNavigation?.HoTen</td>
                            <td>
                                @if (item.TrangThai == "Đã duyệt")
                                {
                                    <span class="badge bg-success">@item.TrangThai</span>
                                }
                                else if (item.TrangThai == "Từ chối")
                                {
                                    <span class="badge bg-danger">@item.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@item.TrangThai</span>
                                }
                            </td>
                            <td>@item.NguoiDuyetNavigation?.HoTen</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaBaoCao" class="btn btn-warning btn-sm">Duyệt/Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.MaBaoCao" class="btn btn-info btn-sm">Xem</a>
                                <a asp-action="Delete" asp-route-id="@item.MaBaoCao" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>