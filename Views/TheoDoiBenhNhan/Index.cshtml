@model IEnumerable<App.Models.TheoDoiBenhNhan>

@{
    ViewData["Title"] = "Theo dõi Bệnh nhân";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>

        <form asp-action="Index" method="get" class="mt-3">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label>Bệnh nhân</label>
                    <select name="maBenhNhan" class="form-control" asp-items="ViewBag.MaBenhNhan">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>
                <div class="col-md-3 mb-3">
                    <label>Y tá</label>
                    <select name="maYTa" class="form-control" asp-items="ViewBag.MaYTa">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>
                <div class="col-md-3 mb-3">
                    <label>Ngày</label>
                    <input type="date" name="tuNgay" class="form-control" value="@ViewData["TuNgayFilter"]" />
                </div>
                <div class="col-md-2 mb-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-info">Tìm</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Clear</a>
                </div>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm Lần theo dõi
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Bệnh nhân</th>
                        <th>Ngày giờ</th>
                        <th>Y tá</th>
                        <th>Nhiệt độ</th>
                        <th>Huyết áp</th>
                        <th>Nhịp tim</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaBenhNhanNavigation?.HoTenBenhNhan</td>
                            <td>@item.NgayTheoDoi?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.MaYtaNavigation?.TenYTa</td>
                            <td>@item.NhietDo</td>
                            <td>@item.HuyetAp</td>
                            <td>@item.NhipTim</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaTheoDoi" class="btn btn-warning btn-sm">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.MaTheoDoi" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>