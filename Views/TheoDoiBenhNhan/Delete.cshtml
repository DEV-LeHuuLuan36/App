@model App.Models.TheoDoiBenhNhan

@{
    ViewData["Title"] = "Xác nhận Xóa Lần theo dõi";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <h3>Bạn có chắc muốn XÓA lần theo dõi này?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Bệnh nhân</dt>
            <dd class="col-sm-9">@Model.MaBenhNhanNavigation?.HoTenBenhNhan</dd>
            <dt class="col-sm-3">Ngày giờ</dt>
            <dd class="col-sm-9">@Model.NgayTheoDoi?.ToString("dd/MM/yyyy HH:mm")</dd>
            <dt class="col-sm-3">Y tá</dt>
            <dd class="col-sm-9">@Model.MaYtaNavigation?.TenYTa</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaTheoDoi" />
            <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>