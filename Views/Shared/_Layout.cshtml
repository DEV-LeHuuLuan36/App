<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QL Bệnh Viện</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/custom-layout.css" asp-append-version="true" />
</head>
<body>

    <div class="sidebar d-flex flex-column p-3">
        <a asp-controller="Dashboard" asp-action="Index" class="d-flex align-items-center mb-3 text-white text-decoration-none fs-4">
            <i class="fa-solid fa-hospital me-2"></i>
            <span>QL Bệnh Viện</span>
        </a>
        <hr>

        <ul class="nav nav-pills flex-column mb-auto">

            @if (User.IsInRole("Role_ReadOnly_Analyst") || User.IsInRole("Role_Developer") || User.IsInRole("Role_DevLead_DevOps") || User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-chart-line me-2"></i> Tổng quan
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="BaoCao" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-file-contract me-2"></i> Trung tâm Báo cáo
                    </a>
                </li>
            }

            @if (User.IsInRole("Role_Developer") || User.IsInRole("Role_DevLead_DevOps") || User.IsInRole("Admin"))
            {
                <li class="nav-divider">NGHIỆP VỤ</li>
                <li class="nav-item">
                    <a asp-controller="BenhNhan" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-user-injured me-2"></i> Bệnh nhân
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="LichHen" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-calendar-days me-2"></i> Lịch hẹn
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="TheoDoiBenhNhan" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-heart-pulse me-2"></i> Theo dõi Bệnh nhân
                    </a>
                </li>
            }

            @if (User.IsInRole("Role_DevLead_DevOps") || User.IsInRole("Admin"))
            {
                <li class="nav-divider">QUẢN TRỊ</li>
                <li class="nav-item">
                    <a href="#danhMucSubmenu" data-bs-toggle="collapse" class="nav-link text-white">
                        <i class="fa-solid fa-cog me-2"></i> Danh mục
                    </a>
                    <ul class="collapse list-unstyled ms-4" id="danhMucSubmenu">
                        <li><a class="sub-item" asp-controller="Khoa" asp-action="Index">Khoa</a></li>
                        <li><a class="sub-item" asp-controller="PhongBenh" asp-action="Index">Phòng bệnh</a></li>
                        <li><a class="sub-item" asp-controller="Thuoc" asp-action="Index">Thuốc</a></li>
                        <li><a class="sub-item" asp-controller="DichVu" asp-action="Index">Dịch vụ</a></li>
                        <li><a class="sub-item" asp-controller="NhaCungCap" asp-action="Index">Nhà cung cấp</a></li>
                        <li><a class="sub-item" asp-controller="ThietBi" asp-action="Index">Thiết bị</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#nhanSuSubmenu" data-bs-toggle="collapse" class="nav-link text-white">
                        <i class="fa-solid fa-users me-2"></i> Nhân sự
                    </a>

                    <ul class="collapse list-unstyled ms-4" id="nhanSuSubmenu">
                        <li><a class="sub-item" asp-controller="BacSi" asp-action="Index">Bác sĩ</a></li>
                        <li><a class="sub-item" asp-controller="YTa" asp-action="Index">Y tá</a></li>
                        <li><a class="sub-item" asp-controller="NhanVien" asp-action="Index">Nhân viên khác</a></li>
                        <li><a class="sub-item" asp-controller="LichLamViec" asp-action="Index">Lịch làm việc</a></li>
                        <li><a class="sub-item" asp-controller="CaTruc" asp-action="Index">Quản lý Ca trực</a></li>
                        <li><a class="sub-item" asp-controller="PhanCa" asp-action="Index">Phân Ca</a></li>
                        <li><a class="sub-item" asp-controller="PhanCong" asp-action="Index">Phân công (Phòng)</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-controller="Maintenance" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-sync-alt me-2"></i> Bảo trì (Cursor)
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="LichSuHoatDong" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-history me-2"></i> Lịch sử Hệ thống
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="BaoCaoLuuTru" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-archive me-2"></i> Báo cáo Lưu trữ
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="RoleManagement" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-users-cog me-2"></i> Phân quyền người dùng
                    </a>
                </li>

            }
        </ul>
        <hr>

        <div class="user-info">
            <partial name="_LoginPartial" />
        </div>
    </div>

    <div class="main-content">
        <nav class="navbar navbar-expand navbar-light bg-body-tertiary shadow-sm topbar">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1">@ViewData["Title"]</span>
            </div>
        </nav>

        <main role="main" class="p-4">
            @RenderBody()
        </main>

        <footer class="footer border-top text-muted p-3 bg-body-tertiary">
            <div class="container-fluid">
                &copy; 2025 - Quản lý Bệnh viện
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>