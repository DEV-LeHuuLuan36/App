@model IEnumerable<App.Models.DichVu>

@{
    ViewData["Title"] = "Quản lý Dịch vụ";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm dịch vụ mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Tên Dịch vụ</th>
                        <th>Đơn Giá</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenDichVu</td>
                            <td>@item.DonGia.ToString("N0") VNĐ</td>
                            <td>@item.MoTa</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Đã ẩn</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaDichVu" class="btn btn-warning btn-sm">Sửa</a>

                                <form asp-action="ToggleStatus" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.MaDichVu" />
                                    @if (item.TrangThai == true)
                                    {
                                        <button type="submit" class="btn btn-danger btn-sm" title="Ẩn dịch vụ này">
                                            <i class="fas fa-eye-slash"></i> Ẩn
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-success btn-sm" title="Hiển thị lại dịch vụ này">
                                            <i class="fas fa-eye"></i> Hiện
                                        </button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>