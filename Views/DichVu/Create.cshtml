@model App.Models.DichVu

@{
    ViewData["Title"] = "Thêm Dịch vụ mới";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="MaDichVu" class="form-label"></label>
                    <input asp-for="MaDichVu" class="form-control" />
                    <span asp-validation-for="MaDichVu" class="text-danger"></span>
                </div>
                <div class="col-md-8 mb-3">
                    <label asp-for="TenDichVu" class="form-label"></label>
                    <input asp-for="TenDichVu" class="form-control" />
                    <span asp-validation-for="TenDichVu" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="DonGia" class="form-label"></label>
                <input asp-for="DonGia" class="form-control" type="number" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label"></label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>