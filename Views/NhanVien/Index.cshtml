@model IEnumerable<App.Models.NhanVien>

@{
    ViewData["Title"] = "Quản lý Nhân viên";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm nhân viên mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Họ tên</th>
                        <th>Chức vụ</th>
                        <th>Loại NV</th>
                        <th>Khoa</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HoTen</td>
                            <td>@item.ChucVu</td>
                            <td>@item.LoaiNhanVien</td>
                            <td>@item.MaKhoaNavigation?.TenKhoa</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Đang làm</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Đã nghỉ</span>
                                }
                            </td>
                            <td>
                                <!-- SỬA LỖI 404: Dùng .Trim() -->
                                <a asp-action="Edit" asp-route-id="@item.MaNhanVien.Trim()" class="btn btn-warning btn-sm">Sửa</a>

                                <!-- SỬA LỖI 404: Dùng .Trim() -->
                                <form asp-action="ToggleStatus" asp-route-id="@item.MaNhanVien.Trim()" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.MaNhanVien.Trim()" />
                                    @Html.AntiForgeryToken()
                                    @if (item.TrangThai == true)
                                    {
                                        <button type="submit" class="btn btn-danger btn-sm" title="Cho nghỉ việc">
                                            <i class="fas fa-user-minus"></i> Nghỉ
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-success btn-sm" title="Cho làm lại">
                                            <i class="fas fa-user-plus"></i> Làm lại
                                        </button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>