@model IEnumerable<App.Models.Thuoc>

@{
    ViewData["Title"] = "Quản lý Thuốc";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm (Loại) thuốc mới
            </a>

            <a asp-controller="PhieuNhapThuoc" asp-action="Create" class="btn btn-success">
                <i class="fas fa-truck-loading me-1"></i> Lập phiếu Nhập thuốc
            </a>
        </div>

        <form asp-action="Index" method="get" class="d-flex mt-3">
            <input type="text" name="timKiem" class="form-control me-2" placeholder="Nhập tên thuốc để tìm..." value="@ViewData["timKiemHienTai"]" />
            <button type="submit" class="btn btn-info">Tìm</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Clear</a>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Tên Thuốc</th>
                        <th>Tồn Kho</th>
                        <th>Hạn Dùng</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenThuoc</td>
                            <td>
                                @if (item.SoLuongTon <= 10)
                                {
                                    <span class="fw-bold text-danger">@item.SoLuongTon (Sắp hết)</span>
                                }
                                else
                                {
                                    @item.SoLuongTon
                                }
                            </td>
                            <td>
                                @if (item.HanSuDung <= DateTime.Now.AddMonths(3))
                                {
                                    <span class="fw-bold text-danger">@item.HanSuDung?.ToString("dd/MM/yyyy") (Sắp hết hạn)</span>
                                }
                                else
                                {
                                    @item.HanSuDung?.ToString("dd/MM/yyyy")
                                }
                            </td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Đang bán</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Ngừng</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaThuoc" class="btn btn-warning btn-sm">Sửa</a>

                                <form asp-action="ToggleStatus" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.MaThuoc" />
                                    @if (item.TrangThai == true)
                                    {
                                        <button type="submit" class="btn btn-danger btn-sm" title="Ngừng bán thuốc này">
                                            <i class="fas fa-eye-slash"></i> Ẩn
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-success btn-sm" title="Bán lại thuốc này">
                                            <i class="fas fa-eye"></i> Hiện
                                        </button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>