@model IEnumerable<App.Models.CaTruc>

@{
    ViewData["Title"] = "Quản lý Ca trực";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Tạo Ca mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Tên Ca</th>
                        <th>Giờ Bắt đầu</th>
                        <th>Giờ Kết thúc</th>
                        <th>Hệ số lương</th>
                        <th>Mô tả</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenCa</td>
                            <td>@item.GioBatDau</td>
                            <td>@item.GioKetThuc</td>
                            <td>@item.HeSoLuong</td>
                            <td>@item.MoTa</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaCa" class="btn btn-warning btn-sm">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.MaCa" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>