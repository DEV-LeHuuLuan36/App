@model App.Models.BacSi

@{
    ViewData["Title"] = "Thêm Bác sĩ mới";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="MaBacSi" class="form-label"></label>
                    <input asp-for="MaBacSi" class="form-control" />
                    <span asp-validation-for="MaBacSi" class="text-danger"></span>
                </div>
                <div class="col-md-8 mb-3">
                    <label asp-for="TenBacSi" class="form-label"></label>
                    <input asp-for="TenBacSi" class="form-control" />
                    <span asp-validation-for="TenBacSi" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="MaKhoa" class="form-label">Khoa</label>
                <select asp-for="MaKhoa" class="form-control" asp-items="ViewBag.MaKhoa">
                    <option value="">-- Chọn khoa --</option>
                </select>
                <span asp-validation-for="MaKhoa" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ChuyenKhoa" class="form-label"></label>
                    <input asp-for="ChuyenKhoa" class="form-control" />
                    <span asp-validation-for="ChuyenKhoa" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="HocVi" class="form-label"></label>
                    <input asp-for="HocVi" class="form-control" />
                    <span asp-validation-for="HocVi" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SoDienThoai" class="form-label"></label>
                    <input asp-for="SoDienThoai" class="form-control" />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>