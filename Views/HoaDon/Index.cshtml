@model IEnumerable<App.Models.HoaDon>

@{
    ViewData["Title"] = "Quản lý Hóa đơn";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Tạo Hóa đơn mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mã Hóa đơn</th>
                        <th>Bệnh nhân</th>
                        <th>Ngày lập</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaHoaDon</td>
                            <td>@item.MaBenhNhanNavigation.HoTenBenhNhan</td>
                            <td>@item.NgayLap.Value.ToString("dd/MM/yyyy")</td>
                            <td>@item.TongTien.Value.ToString("N0") VNĐ</td>
                            <td>
                                @if (item.TrangThai == "Chưa thanh toán")
                                {
                                    <span class="badge bg-warning text-dark">@item.TrangThai</span>
                                }
                                else if (item.TrangThai == "Đã thanh toán")
                                {
                                    <span class="badge bg-success">@item.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@item.TrangThai</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.MaHoaDon" class="btn btn-info btn-sm">
                                    <i class="fas fa-file-invoice-dollar"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>