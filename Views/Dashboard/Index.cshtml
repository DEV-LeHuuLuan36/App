@model App.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Bảng điều khiển Tổng quan";
}

<div class="row">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Bệnh nhân (Đang điều trị)
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ThongKeHoatDong.BenhNhanDangDieuTri</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-injured fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Doanh thu (Hôm nay)
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ThongKeHoatDong.DoanhThuHomNay.Value.ToString("N0") VNĐ</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Lịch hẹn (Hôm nay)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ThongKeHoatDong.LichHenHomNay</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Lịch hẹn (Chờ xác nhận)
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ThongKeHoatDong.LichHenChoXacNhan</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-7 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Lịch hẹn Hôm nay</h6>
            </div>
            <div class="card-body" style="min-height: 400px; max-height: 400px; overflow-y: auto;">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        @foreach (var item in Model.LichHenHomNay)
                        {
                            <tr>
                                <td><strong>@item.NgayHen?.ToString("HH:mm")</strong></td>
                                <td>@item.HoTenBenhNhan</td>
                                <td>@item.TenKhoa</td>
                                <td>
                                    @if (item.TrangThai == "Chờ xác nhận")
                                    {
                                        <span class="badge bg-warning text-dark">@item.TrangThai</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@item.TrangThai</span>
                                    }
                                </td>
                            </tr>
                        }
                        @if (!Model.LichHenHomNay.Any())
                        {
                            <tr><td class="text-center">Không có lịch hẹn nào hôm nay.</td></tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-5 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Thuốc sắp hết hạn / Tồn kho thấp</h6>
            </div>
            <div class="card-body" style="min-height: 400px; max-height: 400px; overflow-y: auto;">
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.ThuocSapHetHan)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @item.TenThuoc
                            <span class="badge bg-danger rounded-pill">Còn @item.SoNgayConLai ngày</span>
                        </li>
                    }
                    @if (!Model.ThuocSapHetHan.Any())
                    {
                        <li class="list-group-item">Không có thuốc nào sắp hết hạn.</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>