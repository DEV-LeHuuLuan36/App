@model IEnumerable<App.Models.PhanCa>

@{
    ViewData["Title"] = "Quản lý Phân Ca";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>

        <form asp-action="Index" method="get" class="mt-3">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label>Chọn ngày xem lịch</label>
                    <input type="date" name="ngayLamViec" class="form-control" value="@ViewData["NgayLamViecFilter"]" />
                </div>
                <div class="col-md-4 mb-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-info">Xem lịch</button>
                </div>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" asp-route-ngay="@ViewData["NgayLamViecFilter"]" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Phân Ca mới
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nhân viên</th>
                        <th>Ca trực</th>
                        <th>Thời gian</th>
                        <th>Trạng thái</th>
                        <th>Ghi chú</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaNhanVienNavigation?.HoTen</td>
                            <td>@item.MaCaNavigation?.TenCa</td>
                            <td>@item.MaCaNavigation?.GioBatDau - @item.MaCaNavigation?.GioKetThuc</td>
                            <td>
                                @if (item.TrangThai == "Đã phân")
                                {
                                    <span class="badge bg-info">@item.TrangThai</span>
                                }
                                else if (item.TrangThai == "Đã hoàn thành")
                                {
                                    <span class="badge bg-success">@item.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.TrangThai</span>
                                }
                            </td>
                            <td>@item.GhiChu</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaPhanCa" class="btn btn-warning btn-sm">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.MaPhanCa" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center">Chưa có ai được phân ca trong ngày này.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>