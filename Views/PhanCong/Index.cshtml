@model IEnumerable<App.Models.PhanCong>

@{
    ViewData["Title"] = "Quản lý Phân công";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Tạo Phân công mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Phòng</th>
                        <th>Bác sĩ</th>
                        <th>Y tá</th>
                        <th>Ngày Phân công</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaPhongNavigation?.TenPhong</td>
                            <td>@item.MaBacSiNavigation?.TenBacSi</td>
                            <td>@item.MaYtaNavigation?.TenYTa</td>
                            <td>@item.NgayPhanCong?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.TrangThai == "Đang làm")
                                {
                                    <span class="badge bg-success">@item.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.TrangThai</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaPhanCong" class="btn btn-warning btn-sm">Sửa</a>
                                @if (item.TrangThai == "Đang làm")
                                {
                                    <a asp-action="Cancel" asp-route-id="@item.MaPhanCong" class="btn btn-danger btn-sm">Hủy</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>